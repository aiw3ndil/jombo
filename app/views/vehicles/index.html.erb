<% if @vehicles.empty? %>
  <h1>¡Vaya, parece que aún no has añadido nungún vehículo!</h1><br>

  <%= link_to "Añadir vehículo", new_vehicle_path, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto mt-4 px-5 py-2.5 text-center" %>
<% else %>
  <div id="vehicles" class="min-w-full">
    <%= render @vehicles %>
  </div>
<% end %>

