<div id="<%= dom_id stop %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Duration:</strong>
    <%= stop.duration %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Place:</strong>
    <%= stop.place %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Trip:</strong>
    <%= stop.trip_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this stop", stop, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this stop', edit_stop_path(stop), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
