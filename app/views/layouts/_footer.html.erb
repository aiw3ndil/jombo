<footer class="p-4 bg-white shadow md:px-6 md:py-8 dark:bg-gray-800">
  <div class="sm:flex sm:items-center sm:justify-between">
    <%= image_tag "jombo-logo.png", alt: "Jombo", class: "h-8 mr-3" %>

    <ul class="flex flex-wrap items-center mb-6 text-sm text-gray-500 sm:mb-0 dark:text-gray-400">
      <li>
          <%= link_to t('layouts.footer.privacy'), privacy_path, class: "hover:underline mr-12" %>
      </li>
      <li>
        <%= link_to t('layouts.footer.blog'), "https://blog.jombo.es/", class: "hover:underline mr-12" %>
      </li>
      <li>
          <%= link_to t('layouts.footer.contact'), contact_path, class: "hover:underline mr-12" %>
      </li>
      <li>
          <%= link_to switch_locale_text, root_path(locale: switch_locale_path), class: "hover:underline" %>
      </li>
    </ul>
  </div>
  <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
  <span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400"><%= t('layouts.footer.copyright') %></span>
</footer>
