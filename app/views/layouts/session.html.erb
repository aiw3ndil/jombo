<!DOCTYPE html>
<html>
  <head>
    <title>jombo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_tag %>

    <%= favicon_link_tag asset_path('favicon.ico') %>
  </head>

  <body>
    <%= render "layouts/header" %>

    <main>
      <div class="h-fit mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
        <% if notice.present? %>
          <div class="bg-green-100 border-l-4 border-green-500 text-black p-4 mb-4">
            <p><%= notice %></p>
          </div>
        <% end %>

        <% if alert.present? %>
          <div class="bg-red-100 border-l-4 border-orange-500 text-black p-4 mb-4">
            <p><%= alert %></p>
          </div>
        <% end %>

        <div class="min-h-screen px-4 py-6 sm:px-0">
          <%= yield %>
        </div>
      </div>
    </main>

    <%= render "layouts/footer" %>
  </body>
</html>
