
<div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
  
  <div class="flex flex-col items-center pb-10">
    <% if reservation.profile_request.avatar.present? %>
      <%= image_tag reservation.profile.avatar, class: "mt-6 w-24 h-24 mb-3 rounded-full shadow-lg" %>
    <% else %>
      <%= image_tag "empty-avatar.jpg", class: "mt-6 w-24 h-24 mb-3 rounded-full shadow-lg" %>
    <% end %>
    <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white"><%= reservation.profile_request.username %></h5>
    <span class="p-4 text-sm text-gray-500 dark:text-gray-400">Quiere reservar un asiento para tu viaje a <%= @trip.destination %>.</span>
    <% if reservation.status == 'sent' %>
      <div class="flex mt-4 space-x-3 md:mt-6">
        <%= form_with(model: [@trip, reservation], class: "contents") do |form| %>
          <%= form.hidden_field :id, value: reservation.id %>
          <%= form.hidden_field :status, value: "approved" %>
          <%= form.submit "Aprobar", class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
        <% end %>
        <%= form_with(model: [@trip, reservation], class: "contents") do |form| %>
          <%= form.hidden_field :id, value: reservation.id %>
          <%= form.hidden_field :status, value: "refused" %>
          <%= form.submit "Rechazar", class: "inline-flex items-center px-4 py-2 ml-2 text-sm font-medium text-center text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-700 dark:focus:ring-gray-700" %>
        <% end %>
      </div>
    <% elsif reservation.status == 'approved' %>
      <span class="inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-green-700 rounded-lg hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">Reserva aprobada</span>
    <% elsif reservation.status == 'refused' %>
      <span class="inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-red-700 rounded-lg hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800">Reserva rechazada</span>
    <% end %>
  </div>
</div>