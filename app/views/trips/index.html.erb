<div id="trips" class="mx-auto md:w-2/3 w-full">
  <% @trips.each do |trip| %>
    <%= render 'own_trip', trip: trip %>
    <div class="mb-8">
      <%= link_to t('helpers.submit.trip.update'), edit_trip_path(trip), class: "float-left mr-2 rounded-lg py-3 px-5 bg-lime-300 inline-block font-medium" %>

      <%= button_to t('helpers.submit.trip.delete'), trip, method: :delete, class: "float-left mr-2 rounded-lg py-3 px-5 bg-red-300 inline-block font-medium" %>

      <%= link_to t('views.trip.index.view_reservations'), trip_reservations_path(trip), class: "mt-2 md:mt-0 rounded-lg py-3 px-5 bg-gray-300 inline-block font-medium" %>
    </div>
  <% end %>
</div>
