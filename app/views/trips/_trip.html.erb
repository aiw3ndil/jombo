<div id="<%= dom_id trip %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= trip.start_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Source:</strong>
    <%= trip.source %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Destination:</strong>
    <%= trip.destination %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Profile:</strong>
    <%= trip.profile_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this trip", trip, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this trip', edit_trip_path(trip), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
